{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all topics",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object with information about specified article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "tickle122",
        "title": "The battle for Node.js security has only begun",
        "article_id": 12,
        "body": "Article text..",
        "votes": 0,
        "comment_count": 7
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the specified article with a new number of votes specified in patch query",
    "queries": ["patch"],
    "exampleInput": [
      {
        "inc_votes": 1
      }
    ],
    "exampleResponse": {
      "article": {
        "author": "tickle122",
        "title": "The battle for Node.js security has only begun",
        "article_id": 12,
        "body": "Article text..",
        "votes": 1,
        "comment_count": 7
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments associates with specified article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 63,
          "votes": -1,
          "created_at": "2020-08-12T23:10:00.000Z",
          "author": "jessjelly",
          "body": "comment body..."
        },
        {
          "comment_id": 102,
          "votes": 10,
          "created_at": "2020-09-14T12:13:00.000Z",
          "author": "jessjelly",
          "body": "comment body ..."
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Adds a comment to the list associated with the specified article",
    "queries": [],
    "exampleInput": {
      "username": "jessjelly",
      "body": "I love this site!"
    },
    "exampleResponse": {
      "comment":
        {
          "comment_id": 15,
          "votes": 0,
          "created_at": "2020-07-08T23:00:00.000Z",
          "author": "jessjelly",
          "body": "I love this site!"
        }
    }
  },
  "DELETE /api/comments/comment_id": {
    "description": "Deletes the specified comment from the database",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "Retrieves a list of users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "rogersop",
          "name": "paul",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24394918?s=400&v=4"
        }
      ]
    }
  }
}
